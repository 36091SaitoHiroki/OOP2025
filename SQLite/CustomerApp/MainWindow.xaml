<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp" SizeToContent="Height"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Width="350">
    <Grid>

        <StackPanel Margin="10" >

            <TextBlock Text="名前" />
            <TextBox x:Name="NameTextBox" />
            <TextBlock Text="電話番号" />
            <TextBox x:Name="PhoneTextBox" />
            <TextBlock Text="住所" />
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>
            <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Margin="0,0,0,5"/>
            <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click" Margin="0,0,0,5"/>
            <Button Content="取得" x:Name="ReadButton" Click="ReadButton_Click" Margin="0,0,0,5"/>
            <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click" />
            <TextBox x:Name="SearchTextBox" Margin="0,5,0,0" FontSize="20" TextChanged="SearchTextBox_TextChanged"/>
            <ListView x:Name="CustomerListView" Margin="0,5,0,0" Height="600" SelectionChanged="CustomerListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Name}" FontSize="20"/>
                            <TextBlock Text="{Binding Phone}" Foreground= "Blue"/>
                            <TextBlock Text="{Binding Address}" Foreground="Black"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>